<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.akarsh.moviedatabase.MainActivity"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/movieBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/godfather"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/movieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/movies"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/movieBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/movieBackground"
        app:layout_constraintTop_toTopOf="@+id/movieBackground"
        android:shadowColor="@color/textColorPrimary"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/gameofthrones"
        android:id="@+id/tvSeriesBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movieBackground"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.489" />

    <TextView
        android:id="@+id/tvSeriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/television_series"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tvSeriesBackground"
        app:layout_constraintLeft_toLeftOf="@+id/tvSeriesBackground"
        app:layout_constraintRight_toRightOf="@+id/tvSeriesBackground"
        app:layout_constraintTop_toTopOf="@+id/tvSeriesBackground"
        android:shadowColor="@color/textColorPrimary"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6" />

</android.support.constraint.ConstraintLayout>